---
import '../styles/main.css'

const heading = "Popstar Photo Booths";
const subheading = "Classic print photo booth rentals in Raleigh, NC";
const appIcon = "/images/app-icon.svg";
const appScreenshot = "/images/prim-1.png";
const footerImage = "/images/banners.svg";
const pageTitle = "Popstar Photo Booths"
const favicon = "/images/favicon.png"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={favicon} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <link rel="stylesheet" href="../styles/main.css" />
  </head>
  <body>
    <div class="container">
      <main>
        <div class="text-container">
          <img src={appIcon} class="app-icon">
          <h1 class="heading">{heading}</h1>
          <h2 class="subheading">{subheading}</h2>
          <div class="button-container">
			<a href="sms:+19192787226?body=Hi%20Popstar%20Photo%20Booths!%20I%20wanted%20to%20get%20pricing%20and%20check%20availability%20for%20your%20photo%20booths." class="button">Text Us (919) 278-7226</a>
            <a href="/quote" class="button">Email Us</a>
          </div>
        </div>
        <div>
          <img src={appScreenshot} id="rotating-image" class="app-screenshot large">
        </div>
      </main>
    </div>
    <footer>
      <img src={footerImage} class="footer-image">
    </footer>
    <script src="../scripts/main.js"></script>
  </body>
</html>
